{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out",
            "preLaunchTask": "build"
        },
        {
            "name": "mock-debug server",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--harmony"
            ],
            "program": "${workspaceRoot}/src/mockDebug.ts",
            "stopOnEntry": false,
            "args": [
                "--server=4711"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        },
        {
            "name": "mock test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/README.md",
            "stopOnEntry": true
        },
        {
            "name": "Sample - Android App",
            "program": "${workspaceRoot}/test/SampleApplication/.vscode/launchReactNative.js",
            "type": "node",
            "request": "launch",
            "args": [
                "android"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/test/SampleApplication/.vscode/.react/"
        },
        {
            "name": "Sample - iOS App",
            "program": "${workspaceRoot}/test/SampleApplication/.vscode/launchReactNative.js",
            "type": "node",
            "request": "launch",
            "args": [
                "ios"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/test/SampleApplication/.vscode/.react/"
        },
        {
            "name": "Sample - Android Extension",
            "program": "${workspaceRoot}/test/SampleApplication/.vscode/launchReactNative.js",
            "type": "node",
            "request": "launch",
            "args": [
                "android"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out/"
        },
        {
            "name": "Sample - iOS Extension",
            "program": "${workspaceRoot}/test/SampleApplication/.vscode/launchReactNative.js",
            "type": "node",
            "request": "launch",
            "args": [
                "ios"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out/"
        },
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}",
                "--extensionTestsPath=${workspaceRoot}/out/test"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out",
            "preLaunchTask": "build"
        }
    ]
}